<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>

  <view name="screen, system, basic, detailed, grid">
    <helpsystem name="help">
      <pos>-0.1 2</pos>
      <textColor>${ctransparent}</textColor>
      <iconColor>${ctransparent}</iconColor>
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <fontSize>0.02</fontSize>
      <color>00000000</color>
    </helpsystem>

    <text name="clock">
      <color>ffffff90</color>
      <fontSize>0.038</fontSize>
      <pos>0.906 0.005</pos>
      <size>0.09 0.058</size>
      <alignment>right</alignment>
      <verticalAlignment>center</verticalAlignment>
    </text>

    <batteryIndicator name="batteryIndicator">
      <pos>0.002 0.005</pos>
      <color>ffffff90</color>
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
    </batteryIndicator>
  </view>

  <include subset="Style" name="Original" displayName="Original">./colors.xml</include>

  <view name="menu">

    <menuText name="menutitle">
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <fontSize>0.04</fontSize>
      <color>ffffff</color>
    </menuText>

    <menuText name="menufooter">
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <fontSize>0.02</fontSize>
      <color>ffffff</color>
    </menuText>

    <menuText name="menutext">
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <fontSize>0.037</fontSize>
      <color>ffffff90</color>
      <selectorColor>${cselector}</selectorColor>
      <selectorColorEnd>${cselector}</selectorColorEnd>
      <selectedColor>${cselected}</selectedColor>
      <separatorColor>00000000</separatorColor>
    </menuText>

    <menuTextEdit name="menutextedit">
      <inactive>./assets/menu-textinput.png</inactive>
      <active>./assets/menu-textinput-active.png</active>
    </menuTextEdit>

    <menuTextSmall name="menutextsmall">
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <fontSize>0.02</fontSize>
      <color>ffffff</color>
    </menuTextSmall>

    <menuBackground name="menubg">
      <color>${cmenubg}</color>
    </menuBackground>

  </view>

  <view name="system">

    <image name="staticBackground">
      <size>1 1</size>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <tile>false</tile>
      <linearSmooth>true</linearSmooth>
      <path>${homebg}</path>
      <zIndex>0</zIndex>
    </image>

    <!-- <image name="logo">
      <path>./art/default.svg</path>
      <path>./art/${system.theme}.svg</path>
    </image> -->

    <text name="logoText">
      <selectorColor>ffffff</selectorColor>
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <forceUppercase>1</forceUppercase>
      <fontSize>0.05</fontSize>
      <color>ffffff</color>
      <selectorImagePath>${selectortyped}</selectorImagePath>
      <selectorOffsetY>-0.009</selectorOffsetY>
      <selectorOffsetX>0.2</selectorOffsetX>
      <selectorHeight>0.105</selectorHeight>
    </text>

    <carousel name="systemcarousel" extra="true">
      <type>vertical</type>
      <pos>0.005 0.08</pos>
      <size>0.99 0.92</size>
      <origin>0 0</origin>
      <color>ffffff00</color>
      <maxLogoCount>10</maxLogoCount>
      <logoScale>1</logoScale>
      <itemStacking>descending</itemStacking>
      <logoSize>0.8 0.8</logoSize>
      <logoPos>0 0</logoPos>
      <fastScrolling>true</fastScrolling>
      <alignment>left</alignment>
      <logoAlignment>left</logoAlignment>
      <horizontalAlignment>left</horizontalAlignment>
      <textHorizontalScrolling>1</textHorizontalScrolling>
    </carousel>

    <text name="systemInfo">
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <alignment>center</alignment>
      <backgroundColor>00000000</backgroundColor>
      <forceUppercase>1</forceUppercase>
      <color>ffffff90</color>
      <origin>0 0</origin>
      <size>0.8 0.08</size>
      <pos>0.1 0</pos>
      <fontSize>0.04</fontSize>

    </text>

    <image name="poster" extra="true">
      <path>./assets/posters/${system.theme}.jpg</path>
      <path>./assets/posters/${system.theme}.png</path>
      <tile>false</tile>
      <origin>1 0</origin>
      <pos>1 0</pos>
      <size>0 1</size>
    </image>

  </view>

  <view name="detailed">

    <textlist name="gamelist">
      <primaryColor>ffffff90</primaryColor>
      <secondaryColor>ffffff90</secondaryColor>
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <fontSize>0.035</fontSize>
      <pos>0 0.08</pos>
      <size>1 0.92</size>
      <alignment>left</alignment>
      <horizontalMargin>0.0025</horizontalMargin>
      <origin>0 0</origin>
      <selectorColor>${cselector}</selectorColor>
      <selectorColorEnd>${cselector}</selectorColorEnd>
      <selectedColor>${cselectedtext}</selectedColor>
      <selectorOffsetY>-0.0035</selectorOffsetY>
      <selectorOffsetX>0</selectorOffsetX>
      <selectorHeight>0.07</selectorHeight>
    </textlist>

    <text name="system_name" extra="true">
      <visible>true</visible>
      <text>${system.fullName}</text>
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <forceUppercase>1</forceUppercase>
      <size>0.8 0.08</size>
      <pos>0.1 0</pos>
      <color>${cinfotext}</color>
      <alignment>center</alignment>
      <fontSize>0.04</fontSize>
      <zIndex>3</zIndex>
    </text>

    <image name="background" extra="true">
      <origin>0 0</origin>
      <pos>0 0</pos>
      <size>1 1</size>
      <path>${listbg}</path>
      <zIndex>2</zIndex>
    </image>

    <text
      name="md_lbl_genre, md_genre, md_lbl_rating, md_lbl_developer, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_releasedate, md_rating, md_image, md_description">
      <visible>false</visible>
    </text>

    <video name="md_video">
      <visible>true</visible>
      <origin>0.5 0.5</origin>
      <pos>0.7 0.5</pos>
      <minSize>1 1</minSize>
      <delay>${delay}</delay>
      <showSnapshotNoVideo>true</showSnapshotNoVideo>
      <showSnapshotDelay>true</showSnapshotDelay>
      <snapshotSource>image</snapshotSource>
      <effect>none</effect>
      <zIndex>1</zIndex>
    </video>

  </view>

  <view name="basic">
    <textlist name="gamelist">
      <primaryColor>ffffff90</primaryColor>
      <secondaryColor>ffffff90</secondaryColor>
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <fontSize>0.035</fontSize>
      <pos>0 0.08</pos>
      <size>1 0.92</size>
      <alignment>left</alignment>
      <horizontalMargin>0.0025</horizontalMargin>
      <origin>0 0</origin>
      <selectorColor>${cselector}</selectorColor>
      <selectorColorEnd>${cselector}</selectorColorEnd>
      <selectedColor>${cselectedtext}</selectedColor>
      <selectorOffsetY>-0.0035</selectorOffsetY>
      <selectorOffsetX>0</selectorOffsetX>
      <selectorHeight>0.07</selectorHeight>
      <!-- <lineSpacing>1.8</lineSpacing> -->
      <!-- <selectorImagePath>${selectortypeb}</selectorImagePath> -->
    </textlist>

    <image name="background" extra="true">
      <origin>0 0</origin>
      <pos>0 0</pos>
      <size>1 1</size>
      <path>${listbg}</path>
      <zIndex>1</zIndex>
    </image>

    <text name="system_name" extra="true">
      <visible>true</visible>
      <text>${system.fullName}</text>
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <forceUppercase>1</forceUppercase>
      <size>0.8 0.08</size>
      <pos>0.1 0</pos>
      <color>${cinfotext}</color>
      <alignment>center</alignment>
      <fontSize>0.04</fontSize>
    </text>

  </view>

</theme>