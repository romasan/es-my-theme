<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>

  <view name="basic, detailed, grid">
    <helpsystem name="help">
      <pos>-0.1 2</pos>
      <textColor>${clockcolor}</textColor>
      <iconColor>${clockcolor}</iconColor>
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <fontSize>0.02</fontSize>
    </helpsystem>
  </view>

  <include subset="Style" name="Original" displayName="Original">./colors.xml</include>

  <view name="menu">

    <menuText name="menutitle">
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <fontSize>0.04</fontSize>
      <color>ffffff</color>
    </menuText>

    <menuText name="menufooter">
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <fontSize>0.02</fontSize>
      <color>ffffff</color>
    </menuText>

    <menuText name="menutext">
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <fontSize>0.035</fontSize>
      <color>ffffff90</color>
      <selectorColor>${cselector}</selectorColor>
      <selectorColorEnd>${cselector}</selectorColorEnd>
      <selectedColor>${cselected}</selectedColor>
      <separatorColor>00000000</separatorColor>
    </menuText>

    <menuTextEdit name="menutextedit">
      <inactive>./assets/menu-textinput.png</inactive>
      <active>./assets/menu-textinput-active.png</active>
    </menuTextEdit>

    <menuTextSmall name="menutextsmall">
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <fontSize>0.02</fontSize>
      <color>ffffff</color>
    </menuTextSmall>

    <menuBackground name="menubg">
      <color>${cmenubg}</color>
    </menuBackground>

  </view>

  <view name="system">

    <image name="staticBackground">
      <size>1 1</size>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <tile>false</tile>
      <linearSmooth>true</linearSmooth>
      <path>${homebg}</path>
      <zIndex>0</zIndex>
    </image>

    <!-- <image name="logo">
      <path>./art/default.svg</path>
      <path>./art/${system.theme}.svg</path>
    </image> -->

    <text name="logoText">
      <selectorColor>ffffff</selectorColor>
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <forceUppercase>1</forceUppercase>
      <fontSize>0.05</fontSize>
      <color>ffffff</color>
      <!-- <alignment>left</alignment>
      <logoAlignment>left</logoAlignment>
      <horizontalAlignment>left</horizontalAlignment> -->

      <selectorImagePath>${selectortyped}</selectorImagePath>
      <selectorOffsetY>-0.009</selectorOffsetY>
      <selectorOffsetX>0.2</selectorOffsetX>
      <selectorHeight>0.105</selectorHeight>
    </text>

    <helpsystem name="help">
      <pos>-0.1 2</pos>
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <textColor>${ctransparent}</textColor>
      <iconColor>${ctransparent}</iconColor>
      <fontSize>0.025</fontSize>
    </helpsystem>

    <carousel name="systemcarousel" extra="true">
      <type>vertical</type>
      <pos>0.005 0.1</pos>
      <size>1 0.951</size>
      <origin>0 0</origin>
      <color>ffffff00</color>
      <maxLogoCount>10</maxLogoCount>
      <logoScale>1</logoScale>
      <itemStacking>descending</itemStacking>
      <logoSize>0.8 0.8</logoSize>
      <logoPos>0 0</logoPos>
      <fastScrolling>true</fastScrolling>
      <alignment>left</alignment>
      <logoAlignment>left</logoAlignment>
      <horizontalAlignment>left</horizontalAlignment>
    </carousel>

    <text name="systemInfo">
      <visible>false</visible>
      <pos>-0.065 0.845</pos>
      <size>1 0.25</size>
      <alignment>center</alignment>
      <backgroundColor>00000000</backgroundColor>
      <color>${cinfotext}</color>
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <fontSize>0.026</fontSize>
    </text>

    <image name="poster" extra="true">
        <path>./assets/posters/${system.theme}.jpg</path>
        <path>./assets/posters/${system.theme}.png</path>
        <tile>false</tile>
        <origin>1 0</origin>
        <pos>1 0</pos>
        <size>0 1</size>
    </image>

  </view>


  <view name="detailed">

    <textlist name="gamelist">
      <selectorColor>${cselector}</selectorColor>
      <selectorColorEnd>${cselector}</selectorColorEnd>
      <selectedColor>${cselectedtext}</selectedColor>
      <primaryColor>ffffff90</primaryColor>
      <secondaryColor>ffffff90</secondaryColor>
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <backgroundCornerSize>1 1</backgroundCornerSize>
      <padding>1 1</padding>
      <fontSize>0.049</fontSize>
      <!-- <pos>0.051 0.167</pos>
      <size>0.6 0.7</size> -->
      <pos>0.054 0.167</pos>
      <size>0.9 0.7</size>

      <alignment>left</alignment>
      <itemsBeforeCenter>5</itemsBeforeCenter>
      <horizontalMargin>0.03</horizontalMargin>
      <origin>0 0</origin>
      <lineSpacing>1.8</lineSpacing>
      <selectorImagePath>${selectortyped}</selectorImagePath>
      <selectorOffsetY>-0.009</selectorOffsetY>
      <selectorOffsetX>0.2</selectorOffsetX>
      <selectorHeight>0.105</selectorHeight>
    </textlist>

    <text name="system_name" extra="true">
      <visible>true</visible>
      <text>${system.fullName}</text>
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <forceUppercase>0</forceUppercase>
      <size>0.9 0.025</size>
      <pos>-0.23 0.955</pos>
      <color>${cinfotext}</color>
      <alignment>center</alignment>
      <fontSize>0.026</fontSize>
      <zIndex>3</zIndex>
    </text>


    <image name="background" extra="true">
      <origin>0 0</origin>
      <pos>0 0</pos>
      <size>1 1</size>
      <path>${listbg}</path>
      <zIndex>2</zIndex>
    </image>

    <text
      name="md_lbl_genre, md_genre, md_lbl_rating, md_lbl_developer, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_releasedate, md_rating, md_image, md_description">
      <visible>false</visible>
    </text>

    <video name="md_video">
      <visible>true</visible>
      <origin>0.5 0.5</origin>
      <pos>0.7 0.5</pos>
      <minSize>1 1</minSize>
      <delay>${delay}</delay>
      <showSnapshotNoVideo>true</showSnapshotNoVideo>
      <showSnapshotDelay>true</showSnapshotDelay>
      <snapshotSource>image</snapshotSource>
      <effect>none</effect>
      <zIndex>1</zIndex>
    </video>

  </view>


  <view name="basic">
    <textlist name="gamelist">
      <selectorColor>${cselector}</selectorColor>
      <selectorColorEnd>${cselector}</selectorColorEnd>
      <selectedColor>${cselectedtext}</selectedColor>
      <primaryColor>ffffff90</primaryColor>
      <secondaryColor>ffffff90</secondaryColor>
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <fontSize>0.049</fontSize>
      <pos>0.054 0.167</pos>
      <size>0.9 0.7</size>
      <alignment>left</alignment>
      <horizontalMargin>0.03</horizontalMargin>
      <origin>0 0</origin>
      <lineSpacing>1.8</lineSpacing>
      <selectorImagePath>${selectortypeb}</selectorImagePath>
      <selectorOffsetY>-0.027</selectorOffsetY>
      <selectorOffsetX>0</selectorOffsetX>
      <selectorHeight>0.141</selectorHeight>
    </textlist>

    <image name="background" extra="true">
      <origin>0 0</origin>
      <pos>0 0</pos>
      <size>1 1</size>
      <path>${listbg}</path>
      <zIndex>1</zIndex>
    </image>


    <text name="system_name" extra="true">
      <visible>true</visible>
      <text>${system.fullName}</text>
      <fontPath>./assets/QueensidesMedium-x30zV.otf</fontPath>
      <forceUppercase>0</forceUppercase>
      <size>0.9 0.025</size>
      <pos>-0.23 0.955</pos>
      <color>${cinfotext}</color>
      <alignment>center</alignment>
      <fontSize>0.026</fontSize>
      <zIndex>2</zIndex>
    </text>

  </view>

</theme>